<div class="row">
    <h2>Enter a username and password to sign up</h2>
<div class="container">
<div class="form-container">   
<!-- Form for user signup--> 
<form class="form" id="signup-form">
    <div class="form-group">
        <label for="username-signup" class="form-label"><span>username: </span></label>
        <!-- Input for username--> 
        <input placeholder="Enter username" type="username" class="form-control" id="username-signup">
    </div> 
    <div class="form-group">
        <label for="password-signup" class="form-label"><span>password:</span></label>
        <!-- Input for password--> 
        <input placeholder="Enter password" type="password" class="form-control" id="password-signup">
    </div>
    <div id="passwordHelp" class="form-text">Password must be at least 8 digits long.</div>
</form>
<!-- Button for signup form submission --> 
    <div class="form-group">
        <button type="submit" class="btn btn-primary" id="signup" form="signup-form">signup</button>
    </div>
    <div id="error-message"></div>
</div>
</div>
</div> 
<div>
<!-- Link to login page -->
<a href="/login" id="login-link"><span>Already have an account? Login here</span></a>
</div>

<!-- JS script with signup form handler logic-->
<script src="js/signup.js"></script>