<div class="card">
    <h2 class="card-header">Edit Your Task</h2>
<form class="card-body edit-form">

    <div class="form-group">
        <label class="form-label">Task Name</label>
        <input type="text" class="form-input" name="task-title" value="{{task.title}}"/>
    </div>

    <div class="form-group">
        <label for="task-desc">Additional Notes</label>
        <input type="text" class="form-input" id="task-desc" name="task-desc" value="{{task.description}}">
    </div>

    <div class="form-group">
    <label for="task-progress">Task Progress Status</label>
    <select id="task-progress" name="task-progress">
        <option class ="emoji-neutral" name="task-status" value="{{task.status}}">Not started</option>
        <option class = "emoji-smile" name="task-status" value="{{task.status}}">In progress</option>
        <option class ="emoji-laughing" name="task-status" value="{{task.status}}">Complete</option>
    </select>
    <input type="submit">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="bi bi-pencil"></i>Edit Task</button>
    </div>

</form>

</div>
<script src="/js/edit.js"></script>