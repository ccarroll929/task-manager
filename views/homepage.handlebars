<section>
    <div class="row align-items-center" id="homepage-header">
        <h2>Hello, <span>{{username}}!</span></h2>
        <p>Add a new task or edit your tasks below</p> 
    </div>
<div class="btn-container">                      
    <button class="homepage-button" class="btn"><a href="/newtask" id="a-add-btn"><i class="bi bi-plus-square"></i> Add Task</a></button>
</div>
<!-- If the user has a task list, their tasks will be displayed here-->
{{#if tasks.length}}
{{#each tasks as |task|}}
<div class="task-container">
        <input type="hidden" name="task-id" value="{{task.id}}"/>
    <div class="card">
        <h2 class="card-title"><span>{{username}}</span>'s Task List</h2>
        <div class="card-header">
            <a class="link" href="/edittask/{{task.id}}">{{task.title}}</a>
        </div>
    </div>   
</div>
</section>
{{/each}}   
{{/if}}
<!-- Bubbles! -->
