<!-- Loop over each object in the tasks array -->
{{#each tasks as |task| }}
<div class="row mb-4 task">
  <div class="col-md-5">
    <h2>
      <a href="/task/{{task.id}}">{{task.name}}</a>
    </h2>
    <p>Created by {{task.user.name}} on {{format_date task.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{task.description}}
    </p>
    <p>
      {{task.status}}
    </p>
  </div>
</div>
{{/each}}