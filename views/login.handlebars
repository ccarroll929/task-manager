<div class="row">
	<h2><span>Login</span></h2>
	<div class="container">
		<div class="form-container">
			<!-- Form for user login-->
			<form class="form" id="login-form" method="POST">
				<div class="form-group">
					<label for="username-login">username:</label>
					<!-- Input for username--> 
					<input class="form-input" type="text" id="username-login"/>
				</div>
				<div class="form-group">
					<label for="password-login">password:</label>
					<!-- Input for password--> 
					<input class="form-input" type="password" id="password-login"/>
				</div>
			</form>
			<div class="form-group">
				<button class="btn btn" type="submit" id="login" form="login-form">login</button>
			</div>
		</div>
	</div>
	<!-- Link to signup page for users without a login-->
	<h2 class="form-text"><a href="/signup" id="login-link">Don't have an account with us? Sign up here!</a></h2>
</div>
<!-- JS script with login form handler logic-->
<script src="./js/login.js"></script>